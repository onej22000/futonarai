<div class="container my-5">
  <h2>サービス詳細</h2>
  <div class="row">
		<div class="col-md-3">
      <%= image_tag @service.image, size: "200x150" %>
    </div>
    <div class="col-md-9">
      <table class="table-box">
        <tr>
          <th>サービス名</th>
          <td><%= @service.name %></td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= simple_format(@service.explanation) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= @service.price_without_tax.to_s(:delimited) %><span>円</span></td>
        </tr>

      </table>
    </div>
  </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-2 my-2 d-flex justify-content-start">
        <%= link_to "編集する",edit_admin_service_path(@service), class: "btn btn-sm btn-success" %>
      </div>
    </div>
</div>