<div class="container">
  <div class="row mt-3">
    <div class="col-3">
      <h2 class="offset-2">新規会員登録</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
    <div class="row d-flex justify-content-start mt-3">
        <div class="col-2 m-auto">
          <%= f.label :お名前 %>
        </div>
        <div class="col-2 mt-2">
          <%= f.text_field :family_name, autofocus: true, placeholder:"例）伊達", class: 'form-control' %>
        </div>
        <div class="col-2 mt-2">
          <%= f.text_field :first_name, placeholder:"例）政宗", class: 'form-control' %>
        </div>
        <div class="col-6"></div>

        <div class="col-2 m-auto">
          <%= f.label :フリガナ %>
        </div>
        <div class="col-2 mt-2">
          <%= f.text_field :kana_family_name, placeholder:"例）ダテ", class: 'form-control' %>
        </div>
        <div class="col-2 mt-2">
          <%= f.text_field :kana_first_name, placeholder:"例）マサムネ", class: 'form-control' %>
        </div>
        <div class="col-6"></div>

        <div class="col-2 m-auto">
          <%= f.label :郵便番号 %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :postal_code, placeholder:"例）00000000", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :住所 %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :address, placeholder:"例）出羽国9-9-9", class: 'form-control'  %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :電話番号 %>
        </div>
        <div class="col-4 mt-2">
          <%= f.text_field :tel, placeholder:"例）09012345678", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-4 mt-2">
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<% @minimum_password_length %>6文字以上)</em>
          <% end %>
        </div>
        <div class="col-4 mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 m-auto">
          <%= f.label :パスワード（確認用） %><br />
        </div>
        <div class="col-4 mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="col-6 mt-2"></div>

        <div class="col-2 mt-2"></div>
        <div class="col-3 mt-2">
          <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>

        <h4 class="mt-3">既に登録済みの方</h4>
        <div><%= link_to "こちら", new_customer_session_path, class: 'text-decoration-none' %>からログインしてください</div>
    </div>
  </div>
</div>