<div class="container">
  <div class="row">
    <div class="col-6 mt-5">
      <h2>マイページ</h2>
      <table class='table'>
        <tbody>
          <tr>
        	  <th>氏名</th>
        	  <td><%= @customer.family_name %></td>
        	  <td><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.kana_family_name %></td>
            <td><%= @customer.kana_first_name %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.tel %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <%# if @customer.delete == false %>
              <td class="scolor1">有効</td>
            <%# else %>
              <td class="scolor2">退会</td>
            <%# end %>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success edit_customer_#{@customer.id}" %>
        <%#= link_to '注文履歴一覧', admin_order_path, class: 'btn btn-sm btn-primary ms-4' %>
      </div>
    </div>
  </div>
</div>